{
  "version": 2,
  "builds": [
    {
      "src": "app/main:app",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "app/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app/main:app"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "HF_API_TOKEN": "@hf_api_token"
    // Add other environment variables here, e.g., for Stripe, Intercom
    // "STRIPE_SECRET_KEY": "@stripe_secret_key"
    // "INTERCOM_ACCESS_TOKEN": "@intercom_access_token"
  }
}
