{
  "version": 2,
  "builds": [
    {
      "src": "run.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "app/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "run.py"
    },
    {
      "src": "/videos/(.*)",
      "dest": "run.py"
    },
    {
      "src": "/docs/(.*)",
      "dest": "run.py"
    },
    {
      "src": "/(.*)",
      "dest": "app/static/$1"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "HF_API_TOKEN": "@hf_api_token"
  }
}
